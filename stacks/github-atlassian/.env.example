################################################################################
# HOMER Environment Configuration
# Secrets and endpoints for modular automation
################################################################################

# === Ghosthub (GitHub Enterprise) ===

# GitHub API token (requires repo/read access at minimum)
GH_TOKEN=your-personal-or-app-token-here

# Repository to operate on (owner/repo or full GitHub URL)
REPO_URL=https://ghosthub.corp.blizzard.net/sfd/vault-barts

# Optional: Override GitHub Enterprise API root
GITHUB_API_URL=https://ghosthub.corp.blizzard.net/api/v3


# === Confluence (Atlassian) ===

# Confluence API token (OAuth or PAT)
CONFLUENCE_API_TOKEN=your-confluence-token

# Target space key for Confluence page publishing
CONFLUENCE_SPACE_KEY=DOC

# Base URL of your Confluence instance (no trailing slash)
CONFLUENCE_API_URL=https://confluence.blizzard.net


# === Jira (Atlassian) ===

# Jira API token (OAuth or PAT)
JIRA_API_TOKEN=your-jira-token

# Target project key for ticket syncing or automation
JIRA_PROJECT_KEY=BARTS

# Base URL of your Jira instance (no trailing slash)
JIRA_API_URL=https://jira.blizzard.net


# === Slack (Planned) ===

# Incoming webhook URL for HOMER notifications
SLACK_WEBHOOK_URL=


# === HOMER Runtime Config ===

# Deployment environment label (development, staging, production)
HOMER_ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
